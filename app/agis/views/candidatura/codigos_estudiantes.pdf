{{def text(atext):
    return XML(atext.decode("utf-8"))
}}

{{c = response.context}}
<font face='DejaVu' size='10'>
    {{if c.escuela.logo:}}
    {{(filename, stream) = db.escuela.logo.retrieve(c.escuela.logo)}}
    <center><p><img src="{{=stream.name}}" width="90" height="90"></p></center>
    {{pass}}
    <center><p><b>{{=text(c.escuela.nombre)}}</b></p></center>
    <center><p><b>{{=text(c.unidad_organica.nombre)}}</b></p></center>
    <BR />
    <BR />
    <center><p><b>{{=text(T('Listado de códigos'))}}</b></p></center>
<br />
<table width="100%" align="center">
    <thead>
        <tr>
            <th width="30%" align="left">{{=text(T('Nombre'))}}</th>
            <th width="30%" align="left">{{=text(T('DNI'))}}</th>
            <th width="40%" align="left">{{=text(T('Código'))}}</th>
        </tr>
    </thead>
    <tbody>
        {{for r in rows:}}
        <TR><TD> </TD><TD> </TD><TD> </TD></TR>
        <TR>
            <td>{{=r[0]}}</td>
            <td>{{=text(r[1])}}</td>
            <td>{{=text(r[2])}}</td>
        </TR>
        <TR><TD> </TD><TD> </TD><TD> </TD></TR>
        {{pass}}
    </tbody>
</table>
</font>
